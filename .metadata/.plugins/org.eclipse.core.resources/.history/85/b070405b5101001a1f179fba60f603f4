#include "xil_types.h"

u16 interruptCounter = 0;
extern int interruptServiced;
extern int state_1;
extern int state_2;

void hwTimerISR(void *CallbackRef)
{
	interruptServiced = FALSE;

	interruptCounter++;

	if (interruptCounter == 500)
	{
		state_1 = (state_1 + 1) % 4;
		state_2 = (state_2 + 1) % 4;
		interruptCounter = 0;
	}

	interruptServiced = TRUE;
}

