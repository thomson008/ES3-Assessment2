#include "xil_types.h"

extern u16 region_selector;
extern u16 colour;
extern int interruptServiced;

void hwTimerISR(void *CallbackRef)
{
	interruptServiced = FALSE;

	colour++;

	switch(region_selector)
	{
		case 3:
			region_selector = 2;
			break;
		case 2:
			region_selector = 1;
			break;
		case 1:
			region_selector = 8;
			break;
		case 8:
			region_selector = 7;
			break;
		case 7:
			region_selector = 6;
			break;
		case 6:
			region_selector = 5;
			break;
		case 5:
			region_selector = 4;
			break;
		case 4:
			region_selector = 3;
			break;
//		case 9:
//			region_selector = 3;
//			break;
		default:
			break;
	}

	interruptServiced = TRUE;
}

